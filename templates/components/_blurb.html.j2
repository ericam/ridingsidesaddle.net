<!-- Book Blurbs -->

{% if config.blurbs %}
<article class="blurb section">
<div class="container">
  <h2 class="section-title">
    <a href="https://www.dropbox.com/sh/hernur1iocol84n/AADgWeHZLaCL0YuRA5MP6mMXa?dl=0" class="title-link">
      Get the <b>Press Kit</b> »
    </a>
  </h2>

{% for blurb in config.blurbs %}

  <figure class="blurb">
    <blockquote class="blurb-body">
      <span class="open">“</span>{{ blurb.body|safe }}<span class="close">”</span>
    </blockquote>

    <figcaption class="h-card blurb-cite">
      —
      {% if blurb.cite %}
        {% if blurb.cite_url %}
          <a href="{{ blurb.cite_url }}" class="p-name">{{ blurb.cite }}</a>{% if blurb.org %},{% endif %}
        {% else %}
          <span class="p-name">{{ blurb.cite }}</span>{% if blurb.org %},{% endif %}
        {% endif %}
      {% endif %}

      {% if blurb.org %}
        {% if blurb.org_url %}
          <a href="{{ blurb.org_url }}" class="p-org">{{ blurb.org }}</a>
        {% else %}
          <span class="p-org">{{ blurb.org|safe }}</span>
        {% endif %}
      {% endif %}
    </figcaption>
  </figure>

{% endfor %}
</div>
</article>
{% endif %}

